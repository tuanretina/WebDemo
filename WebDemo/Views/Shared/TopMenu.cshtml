@model List<WebDemo.EF.Menu>
<div class="call">
    <p><span>Need help?</span> call us <span class="number">0866-043-047</span></span></p>
</div>
<div class="account_desc">
    @{
        var session = (UserLogin)Session[WebDemo.Common.CommonConstants.USER_SESSION];
    }
    @if (session == null)
    {
        <ul>
            @foreach (var item in Model)
            {
                <li><a href="@item.Link" target="@item.Target">@item.Text</a></li>
            }
        </ul>
    }
    else
    {
        <ul>
            <li>Hello:@session.UserName</li>
            <li>@Html.ActionLink("Logout","Logout","User")</li>
        </ul>
    }

</div>
<div class="clear"></div>

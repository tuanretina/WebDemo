@model PagedList.IPagedList<WebDemo.EF.ProductCategory>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Category";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
    Category Product
}



<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">

            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Index", "Category", FormMethod.Get))
                {
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" name="searchString" value="@ViewBag.SearchString" />
                            </div>

                            <div class="col-md-4">
                                <button type="submit">Seacrh</button>
                            </div>
                            <br />
                            <form>
                                <button class="btn btn-primary" formaction="/Admin/Category/Create">Add Category</button>
                            </form>
                        </div>
                    </div>


                }
                <h4 class="text-success">@TempData["msg"]</h4>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">

                        <thead>
                            <tr>
                                <th>#</th>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Metatitile</th>

                                <th>DislayOrder	</th>


                                <th>CreatedBy		</th>
                                <th>CreatedDate		</th>
                                <th>Status		</th>





                            </tr>

                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td>
                                        <a href="/Admin/Category/Edit/@item.ID">Edit</a>

                                        |
                                        @Ajax.ActionLink("Delete", "Delete", new { @id = item.ID }, new AjaxOptions
                                   {
                                       Confirm = "Do you want to delete  ?",
                                       OnComplete = "$('#row_" + item.ID + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                    <td>@item.ID</td>
                                    <td>@item.Name</td>
                                    <td>@item.MetaTitile</td>
                                    <td>@item.DislayOrder</td>
                                    <td>@item.CreatedBy</td>
                                    <td>@item.CreatedDate</td>
                                    <td>@(item.Status.Equals(true) ? "Active" : "Blocked")</td>
                         





                                </tr>

                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SeacrhString }))
                </div>
            </div>
        </div>
    </div>
</div>


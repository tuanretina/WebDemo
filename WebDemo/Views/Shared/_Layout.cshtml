<!DOCTYPE HTML>
<html>
<head>
    <title>OnlineShop</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="/assets/client/css/bootstrap.css" rel="stylesheet" />
    <link href="~/assets/client/css/jquery-ui.css" rel="stylesheet" />

    <link href="~/assets/client/css/style.css" rel="stylesheet" />
    <link href="/assets/client/css/slider.css" rel="stylesheet" type="text/css" media="all" />\

    <script src="~/assets/client/js/jquery-1.12.4.js"></script>
    <script src="~/assets/client/js/jquery-ui.js"></script>
    <script src="/assets/client/js/bootstrap.js"></script>
    <script type="text/javascript" src="/assets/client/js/move-top.js"></script>
    <script type="text/javascript" src="/assets/client/js/easing.js"></script>
    <script type="text/javascript" src="/assets/client/js/startstop-slider.js"></script>
</head>
<body>
    <div class="wrap">
        <div class="header">
            <div class="headertop_desc">

                @{Html.RenderAction("TopMenu", "Home");}
                <div class="logo">
                    <a href="/" ref="nofollow"><img src="~/assets/client/images/logo1.png" height="100" width="297" alt="" /></a>
                </div>
            </div>
            <div class="header_top">
               
                @{Html.RenderAction("HeaderCart", "Home"); }
                <script type="text/javascript">
                    function DropDown(el) {
                        this.dd = el;
                        this.initEvents();
                    }
                    DropDown.prototype = {
                        initEvents: function () {
                            var obj = this;

                            obj.dd.on('click', function (event) {
                                $(this).toggleClass('active');
                                event.stopPropagation();
                            });
                        }
                    }

                    $(function () {

                        var dd = new DropDown($('#dd'));

                        $(document).click(function () {
                            // all dropdowns
                            $('.wrapper-dropdown-2').removeClass('active');
                        });

                    });

                </script>
                <div class="clear"></div>
            </div>
            <div class="header_bottom">
                @{Html.RenderAction("MainMenu", "Home");}

                <div class="search_box">
                    <form action="/search" method="get">
                        <input type="text" id="txtKeyword" name="keyword" placeholder="Search Products"><input type="submit" value="">
                    </form>
                </div>
                <div class="clear"></div>
            </div>
            @RenderSection("slide", required: false)

        </div>
        <div class="main">
            @RenderBody()

        </div>
    </div>
    <div class="footer">
        @{Html.RenderAction("Footer", "Home");}
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $().UItoTop({ easingType: 'easeOutQuart' });

        });
    </script>
    <a href="#" id="toTop"><span id="toTopHover"> </span></a>
    <script src="~/assets/client/js/baseController.js"></script> 
    @RenderSection("jsFooter", required: false)
</body>
</html>


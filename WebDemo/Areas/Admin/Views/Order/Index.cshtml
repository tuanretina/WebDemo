@model PagedList.IPagedList<WebDemo.ViewModel.OrderViewModel>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Order";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
    Order
}



<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">

            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Index", "Order", FormMethod.Get))
                {
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" name="searchString" value="@ViewBag.SearchString" />
                            </div>

                            <div class="col-md-4">
                                <button type="submit">Seacrh</button>
                            </div>
                        </div>
                    </div>


                }
                <h4 class="text-success">@TempData["msg"]</h4>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">

                        <thead>
                            <tr>
                                <th>#</th>
                                <th>ID</th>
                               
                                <th>CreatedDate</th>


                                <th>ShipAddress</th>
                                <th>ShipName</th>
                                <th>ShipMobile</th>
                                <th>ShipEmail</th>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Total</th>
                                <th>Status</th>





                            </tr>

                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr id="row_@item.ID">
                                <td>
                                    <a href="/Admin/Order/Edit/@item.ID">Edit</a>
                                    |
                                    @Ajax.ActionLink("Delete", "Delete", new { @id = item.ID }, new AjaxOptions
                               {
                                   Confirm = "Do you want to delete?",
                                   OnComplete = "$('#row_" + item.ID + "').remove()",
                                   HttpMethod = "Delete"
                               })

                                </td>

                                <td>@item.ID</td>

                               
                                <td>@item.CreatedDate</td>
                                <td>@item.ShipAddress</td>
                                <td>@item.ShipName</td>
                                <td>@item.ShipMobile</td>
                                <td>@item.ShipEmail</td>
                                <td>@item.Product</td>
                                <td>@item.Quantity</td>
                                <td>@item.Price</td>
                                <td>@item.Total</td>
                                <td>@(item.Status.Equals(true) ? "Confirm" : "Pending")</td>






                            </tr>

                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SeacrhString }))
                </div>
            </div>
        </div>
    </div>
</div>


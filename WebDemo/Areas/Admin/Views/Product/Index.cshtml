@model PagedList.IPagedList<WebDemo.EF.Product>

@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    List Product
}



<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">

            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Index", "Product", FormMethod.Get))
                {
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" name="searchString" value="@ViewBag.SearchString" />


                            </div>

                            <div class="col-md-4">
                                <button class="btn btn-primary " type="submit">Seacrh</button>
                            </div>

                            <br />
                            <form>
                                <button class="btn btn-primary" formaction="/Admin/Product/Add">Add Product</button>
                            </form>
                        </div>
                    </div>


                }
            <h4 class="text-success">@TempData["msg"]</h4>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">

                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Code</th>
                                <th>Image	</th>
                                <th>Description	</th>
                                <th>MetaDescriptions		</th>
                                <th>MoreImages	</th>
                                <th>Price		</th>
                                <th>PromotionPrice</th>

                                <th>IncludeVAT	</th>



                                <th>Quantity		</th>
                                <th>CategoryID	</th>
                                <th>Detail</th>
                                <th>Warranty</th>
                                <th>CreatedDate		</th>
                                <th>CreatedBy		</th>
                                <th>ModifiedDate		</th>
                                <th>ModifiedBy		</th>
                                <th>MetaDescriptions</th>

                                <th>Tophot	</th>
                                <th>ViewCount		</th>

                                <th>Status		</th>


                            </tr>

                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr id="row_@item.ID">
                                <td>
                                    <a href="/Admin/Product/Edit/@item.ID">Edit</a>

                                    |
                                    @Ajax.ActionLink("Delete", "Delete", new { @id = item.ID }, new AjaxOptions
                               {
                                   Confirm = "Do you want to delete  ?",
                                   OnComplete = "$('#row_" + item.ID + "').remove()",
                                   HttpMethod = "Delete"
                               })
                                </td>
                                <td>@item.Name</td>
                                <td>@item.Code</td>

                                <td>
                                    <img src="@Url.Content(@item.Image)" width="100" height="100" />


                                </td>




                                <td>@item.Description</td>
                                <td>@item.MetaDescriptions</td>
                                <td>@item.MoreImages</td>
                                <td>@item.Price</td>
                                <td>@item.PromotionPrice</td>
                                <td>@item.IncludeVAT</td>
                                <td>@item.Quantity</td>
                                <td>@item.CategoryID</td>
                                <td>@item.Detail</td>
                                <td>@item.Warranty</td>

                                <td>@item.CreatedDate</td>
                                <td>@item.CreatedBy</td>
                                <td>@item.ModifiedDate</td>

                                <td>@item.ModifiedBy</td>
                                <td>@item.MetaDescriptions</td>

                                <td>@item.Tophot</td>

                                <td>@item.ViewCount</td>


                                <td>@(item.Status.Equals(true) ? "In stock" : "Out of stock ")</td>

                            </tr>

                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SeacrhString }))
                </div>
            </div>
        </div>
    </div>
</div>
@model List<WebDemo.Models.CartItem>
@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="section group">
        @if (Model.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <td>Product Code</td>
                        <td>Product Name</td>
                        <td>Product Image</td>
                        <td>Quantity</td>
                        <td>Price</td>
                        <td>Total</td>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Product.ID</td>
                            <td>@item.Product.Name</td>
                            <td><img src="@item.Product.Image" width="100px" /></td>
                            <td><input type="text" class="txtQuatity" data-id="@item.Product.ID" value="@item.Quatity" /></td>
                            <td>@item.Product.Price.GetValueOrDefault(0)</td>
                            <td>@(item.Product.Price.GetValueOrDefault(0) * item.Quatity)</td>
                            <td> <a href="#" data-id="@item.Product.ID" class="btn-delete"> Delete</a></td>
                        </tr>
                    }


                </tbody>

            </table>



        }
        <div class="section-group">
            <div class="col-md-6">
                @using (Html.BeginForm("Payment", "Cart", FormMethod.Post))
                {
                    <div class="form-group">
                        <label>Recipient name </label>
                        <input name="shipName" class="form-control" required/>
                    </div>
                    <div class="form-group">
                        <label>Phone </label>
                        <input type="number" name="mobile"  class="form-control" required/>
                    </div> <div class="form-group">
                        <label>Address </label>
                        <input name="address"  class="form-control"required />
                    </div> <div class="form-group">
                        <label>Email </label>
                        <input name="email" class="form-control" required/>
                    </div>

                           <button type="submit" class="btn btn-danger">Submit an order</button>
                }
            </div>

        </div>

    </div>
</div>


